<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Opções</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">


				<%= f.simple_fields_for(:options) do |ff| %>

				<%= render partial: "option_fields", locals: { f: ff } %>

				<% end %>
				<div class="field">
					<%= link_to_add_association('Adicionar', f, :options, class: 'btn btn-success btn-sm') %>
				</div>




			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Sair</button>
				<%#= f.submit 'salvar', class: "btn btn-primary" %>
				<%= btn_save %>
			</div>
		</div>
	</div>
</div>