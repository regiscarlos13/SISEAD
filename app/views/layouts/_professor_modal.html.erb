<div class="modal fade" id="professor_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Entre com sua Senha</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag(professor_senha_path, remote: true, method: "get") do %>

        <%= select_tag :professor_select, options_for_select(@professors, cookies.encrypted[:selected_professor]), :style => "width: 100%" %> <br> 
        <div class="mt-3">
          <%#= cookies.encrypted[:selected_professor] %>
          <%= label_tag 'Senha:' %>
          <%= password_field_tag :senha_professor, nil %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>

        <%= button_tag(type: 'submit', class: 'btn btn-primary', id: 'button_banco', name: nil) do %>
        Escolher

        <% end %>
        <% end %>



      </div>
    </div>
  </div>
</div>