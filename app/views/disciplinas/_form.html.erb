<%= javascript_pack_tag 'select2' %>

<%= select2('#disciplina_serie') %>
<%= select2('#disciplina_turma') %>
<%= select2('#disciplina_professor') %>

<div class="container" style="margin-top: 10%;">

  <%= simple_form_for(@disciplina, defaults: { input_html: { class: 'form-control-sm' }, label_html: { class: 'col-form-label col-form-label-sm' } }) do |f| %>
  
  
  <div class="form-row">
    <div class="col-sm-12 col-md-6 col-lg-1">
      <%= f.input :serie, collection: @series %>

    </div>
    <div class="col-sm-12 col-md-6 col-lg-1">
      <%= f.input :turma, collection: @turmas %>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <%= f.input :professor, collection: @professors %>
    </div>

    <div class="col-sm-12 col-md-6 col-lg-3">
      <%= f.input :name %>
    </div>

  </div>

  <hr>

  <%= btn_save %> | <%= btn_back(disciplinas_path) %>

  <% end %>

</div>